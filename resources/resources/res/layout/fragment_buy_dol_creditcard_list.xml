<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:paddingBottom="@dimen/dp16" android:layout_width="match_parent" android:layout_height="wrap_content">
    <th.p047co.dtac.android.dtacone.widget.view.DtacFontTextView android:id="@+id/tvSelectAccount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp16" android:layout_marginTop="@dimen/dp16" android:layout_marginRight="@dimen/dp16" android:text="@string/buy_dol_tab_creditcard_select" android:layout_marginStart="@dimen/dp16" android:layout_marginEnd="@dimen/dp16"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/addMoreView" android:paddingTop="@dimen/dp16" android:paddingBottom="@dimen/dp16" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="60dp" android:layout_marginLeft="@dimen/dp16" android:layout_marginRight="@dimen/dp16">
            <com.google.android.material.textfield.TextInputLayout android:id="@+id/edt_credit_card_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                <th.p047co.dtac.android.dtacone.widget.view.CreditCardEditText android:textSize="16sp" android:id="@+id/edt_credit_card" android:background="@drawable/z_selector_floating_rectangle" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/buy_dol_credit_and_debit" android:maxLength="24" android:digits="@string/digits" android:inputType="number" style="@style/EditText"/>
            </com.google.android.material.textfield.TextInputLayout>
            <androidx.appcompat.widget.AppCompatImageView android:layout_gravity="center_vertical" android:id="@+id/ivCreditBrand" android:layout_width="wrap_content" android:layout_height="32dp" android:src="0x7f080329" android:scaleType="centerInside" android:contentDescription="@null"/>
        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout android:id="@+id/edt_user_credit_card_layout" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="@dimen/dp16" android:layout_marginTop="@dimen/dp16" android:layout_marginRight="@dimen/dp16" android:animateLayoutChanges="true">
            <th.p047co.dtac.android.dtacone.widget.view.DtacClearableEditText android:textSize="16sp" android:id="@+id/edt_user_credit_card" android:background="@drawable/z_selector_floating_rectangle" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/buy_dol_name_in_card" android:maxLines="1" android:maxLength="50" android:inputType="text" android:nextFocusForward="@+id/edt_card_expired" app:capital="true" style="@style/EditText"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="@dimen/dp16" android:layout_marginTop="@dimen/dp16" android:layout_marginRight="@dimen/dp16">
            <com.google.android.material.textfield.TextInputLayout android:id="@+id/inputExpiredDate" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" android:animateLayoutChanges="true">
                <th.p047co.dtac.android.dtacone.widget.view.DtacClearableEditText android:textSize="16sp" android:id="@+id/edt_card_expired" android:background="@drawable/z_selector_floating_rectangle" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/buy_dol_expired_date" android:maxLines="1" android:maxLength="7" android:digits="@string/digits" android:inputType="number" android:imeOptions="actionNext" style="@style/EditTextWithStroke"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:id="@+id/edt_cvv_card_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" android:animateLayoutChanges="true">
                <th.p047co.dtac.android.dtacone.widget.view.DtacEditText android:textSize="16sp" android:id="@+id/edt_cvv_card" android:background="@drawable/z_selector_floating_rectangle" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/buy_dol_number_in_back_card" android:maxLines="1" android:maxLength="4" android:digits="@string/digits" android:drawableRight="0x7f08035d" android:inputType="numberPassword" android:imeOptions="actionDone" android:drawableEnd="0x7f08035d" style="@style/EditTextWithStroke"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatCheckBox android:enabled="false" android:textSize="14sp" android:textColor="@drawable/z_selector_enable_disable" android:id="@+id/checkbox_save_credit" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp16" android:layout_marginTop="@dimen/dp16" android:layout_marginRight="@dimen/dp16" android:text="@string/buy_dol_save_card_check_box" style="@style/TextViewGray"/>
    </LinearLayout>
    <th.p047co.dtac.android.dtacone.widget.view.DtacRecyclerView android:id="@+id/recyclerViewListCard" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout android:gravity="center_vertical" android:id="@+id/addMoreCredit" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="8dp" android:layout_marginRight="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
        <ImageView android:layout_width="22dp" android:layout_height="22dp" android:contentDescription="@null" app:srcCompat="@drawable/z_custom_add_button"/>
        <th.p047co.dtac.android.dtacone.widget.view.DtacFontTextView android:id="@+id/tvAddCreditCard" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp8" android:text="@string/add_more_credit_card" android:layout_marginStart="@dimen/dp8" style="@style/TextViewBlue"/>
    </LinearLayout>
    <th.p047co.dtac.android.dtacone.widget.view.DtacFontButton android:id="@+id/btnConfirm" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/confirm_text" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" style="@style/ButtonBlue"/>
    <LinearLayout android:gravity="center" android:id="@+id/cancelAddMoreCredit" android:layout_width="match_parent" android:layout_height="32dp" android:layout_marginTop="8dp">
        <th.p047co.dtac.android.dtacone.widget.view.DtacFontTextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp8" android:text="@string/cancle_add_more_credit_card" android:layout_marginStart="@dimen/dp8" style="@style/TextViewBlue"/>
    </LinearLayout>
</LinearLayout>
