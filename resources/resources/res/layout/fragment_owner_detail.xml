<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/rootLayout" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout android:id="@+id/stv_phoenix_app_bar" android:background="#00ffffff" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.google.android.material.appbar.CollapsingToolbarLayout android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_scrollFlags="0x3">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <include android:id="@+id/box_owner_profile" layout="@layout/z_owner_detail_item_row"/>
                    <androidx.cardview.widget.CardView android:id="@+id/cardview_last_login" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="0.5dp" app:cardCornerRadius="@dimen/cardview_default_radius" app:cardElevation="@dimen/card_elevation">
                        <th.p047co.dtac.android.dtacone.widget.view.DtacFontTextView android:textSize="14sp" android:textStyle="normal" android:id="@+id/tv_last_login" android:padding="@dimen/dp16" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/TextViewGrayishBrown"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <th.p047co.dtac.android.dtacone.widget.loading.DtacSwipeRefresh android:id="@+id/swipeRefresh" android:layout_width="match_parent" android:layout_height="match_parent" app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:animateLayoutChanges="true">
                    <th.p047co.dtac.android.dtacone.widget.view.DtacRecyclerView android:id="@+id/recyclerViewTransaction" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    <View android:background="@color/greyish" android:layout_width="match_parent" android:layout_height="0.4dp"/>
                    <FrameLayout android:background="@color/white" android:padding="@dimen/dp8" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp16" android:layout_marginBottom="@dimen/dp16">
                        <th.p047co.dtac.android.dtacone.widget.view.DtacFontButton android:textColor="@color/warmGrey" android:layout_gravity="center_horizontal" android:id="@+id/btnDelete" android:layout_width="200dp" android:layout_height="wrap_content" android:text="@string/delete_owner" style="@style/ButtonWhiteStroke"/>
                    </FrameLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </th.p047co.dtac.android.dtacone.widget.loading.DtacSwipeRefresh>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</FrameLayout>
