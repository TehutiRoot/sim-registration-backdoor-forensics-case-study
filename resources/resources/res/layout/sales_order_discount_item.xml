<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="80dp">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/layoutContract" android:background="@color/niceBlueFour" android:layout_width="60dp" android:layout_height="0dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0">
        <ImageView android:id="@+id/imageTime" android:layout_width="24dp" android:layout_height="24dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/ic_contract_time"/>
        <th.p047co.dtac.android.dtacone.widget.view.DtacFontTextView android:textSize="9dp" android:textColor="@color/white" android:id="@+id/textContract" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ติดสัญญา" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/imageTime" style="@style/TextViewBlack"/>
        <LinearLayout android:gravity="bottom|center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <th.p047co.dtac.android.dtacone.widget.view.DtacFontTextView android:textSize="12dp" android:textColor="@color/white" android:id="@+id/textContractMonth" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAlignment="textEnd" style="@style/TextViewBlack"/>
            <th.p047co.dtac.android.dtacone.widget.view.DtacFontTextView android:textSize="9dp" android:textColor="@color/white" android:id="@+id/textMonth" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="เดือน" android:layout_marginStart="4dp" app:layout_constraintBaseline_toBaselineOf="@+id/textContractMonth" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toEndOf="@+id/textContractMonth" style="@style/TextViewBlack"/>
        </LinearLayout>
    </LinearLayout>
    <View android:id="@+id/divider_horizon" android:layout_width="1.5dp" android:layout_height="0dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toEndOf="@+id/layoutContract" app:layout_constraintTop_toTopOf="0"/>
    <androidx.constraintlayout.widget.Group android:id="@+id/groupContract" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" app:constraint_referenced_ids="layoutContract, divider_horizon"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginEnd="4dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toStartOf="@+id/buttonBin" app:layout_constraintStart_toEndOf="@+id/divider_horizon" app:layout_constraintTop_toTopOf="0">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <th.p047co.dtac.android.dtacone.widget.view.DtacFontTextView android:ellipsize="end" android:id="@+id/discountName" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="1" android:layout_weight="1" android:textAlignment="textStart" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:layout_constraintEnd_toStartOf="@+id/discountItemPrice" app:layout_constraintStart_toEndOf="@+id/divider_horizon" app:layout_constraintTop_toTopOf="0" style="@style/TextViewBlack"/>
            <th.p047co.dtac.android.dtacone.widget.view.DtacFontTextView android:ellipsize="end" android:id="@+id/discountItemPrice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:textAlignment="textStart" android:layout_marginEnd="8dp" style="@style/TextViewBlack"/>
        </LinearLayout>
        <th.p047co.dtac.android.dtacone.widget.view.DtacFontTextView android:textSize="12sp" android:id="@+id/discountCode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="16dp" style="@style/TextViewGray"/>
        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/extraAdvance" android:background="@drawable/background_light_blue_rounded" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="8dp" android:layout_marginStart="16dp">
            <th.p047co.dtac.android.dtacone.widget.view.DtacFontTextView android:textColor="@color/greyishBrown" android:id="@+id/extraAdvanceText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="4dp" android:text="@string/discount_extra_advance_detail_amount" android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" style="@style/TextViewBlack"/>
            <th.p047co.dtac.android.dtacone.widget.view.DtacFontTextView android:textColor="@color/colorPrimary" android:id="@+id/extraAdvanceAmount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="@+id/extraAdvanceText" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="@+id/extraAdvanceText" style="@style/TextViewBlack"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <ImageView android:id="@+id/buttonBin" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginEnd="4dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/ic_bin"/>
</androidx.constraintlayout.widget.ConstraintLayout>
